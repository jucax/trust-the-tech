generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  enrollments UserCourse[]
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  instructor  String
  level       String
  image       String?
  createdAt   DateTime @default(now())
  lessons     Lesson[]
  enrollments UserCourse[]
}

model Lesson {
  id        Int    @id @default(autoincrement())
  course    Course @relation(fields: [courseId], references: [id])
  courseId  Int
  title     String
  duration  String
  order     Int
}

model UserCourse {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  course    Course   @relation(fields: [courseId], references: [id])
  courseId  Int
  progress  Int?     // percent complete
  enrolledAt DateTime @default(now())
}